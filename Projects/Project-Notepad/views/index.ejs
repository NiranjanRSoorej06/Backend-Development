<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="POST">
                <input class='block px-3 py-2 bg-zinc-800  w-full rounded-md'type="text" placeholder="Title goes here" name="title">
                <textarea class='block mt-2 px-3 py-2 bg-zinc-800 resize-none w-full rounded-md' name="details" placeholder="Write your tasks here"></textarea>
                <input class='mt-2 bg-blue-600 px-5 py-2 rounded-md' type="submit" value="Create Task">
            </form>
        </div>
        <div class="tasks p-10 flex gap-3 flex-wrap">
            <% if(files.length){%>
                <% files.forEach(function(val){ %>
                    <div class="task min-w-72 px-3 rounded-md py-4 bg-zinc-800">
                        <h1 class="text-white text-3xl tracking-tighter"><%= val%></h1>
                        <div class="flex w-full justify-between items-center mt-3">
                            <a href="/files/<%= val%>" class="text-blue-500 inline-block">Read More...</a>
                            <a class="text-zinc-600" href="/edit/<%= val%>">Edit FileName</a>
                        </div>
                    </div>
                <% }) %>
            <% } else {%>
                <h3 class="text-zinc-600">No tasks yet</h3>
            <% } %>
        </div>
    </div>
</body>
</html>