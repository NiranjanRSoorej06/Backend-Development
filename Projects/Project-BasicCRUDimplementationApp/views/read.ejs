<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/tailwind.css">
    <link rel="stylesheet" href="/stylesheets/styles.css">
</head>
<body>
    <div class="page-center">
        <div class="nav mb-3">
            <a href="/">Back to Home</a>
        </div>

        <h1 class="mb-3">All Users</h1>
        <div class="users">
            <% if(users.length > 0){ %>
                <% users.forEach(function(user){ %>
                    <div class="user card">
                        <div class="user-image">
                            <img src="<%= user.image%>" alt="<%= user.name%>">
                        </div>
                        <h3 style="margin:0;margin-top:0.6rem;font-size:1.05rem;font-weight:700"><%= user.name%></h3>
                        <div class="muted" style="margin-top:0.25rem"><%= user.email%></div>
                        <div style="margin-top:0.75rem;display:flex;gap:0.75rem">
                            <a href="/edit/<%= user._id %>" class="muted">Edit</a>
                            <a href="/delete/<%= user._id %>" style="color:#ff6b6b">Delete</a>
                        </div>
                    </div>
                <% })%>
            <% }else{%>
                <h3 class="muted">No users yet</h3>
            <% }%>
        </div>
    </div>
</body>
</html>